                  HV_ANSIBLE_CONNECTION=local
                  JJB_USER_CREDENTIALS_ID=JJB_USER
                  JJB_PASSWORD_CREDENTIALS_ID=JJB_PASSWORD
                  JJB_JENKINS_URL=http://localhost:8080
