- _job_defaults: &job_default
    name: "job_default"
    project-type: pipeline
    description: "{description}"
    parameters: "{parameters}"
    properties: "{properties}"
    triggers: "{triggers}"
    pipeline-scm:
      scm:
        - repository
      script-path: jobs/{dir_name}/Jenkinsfile
      lightweight-checkout: true

- job-template:
    name: "{jenkins_folder}/{name}"
    id: builder-job
    <<: *job_default

- job-template:
    name: "{jenkins_folder}/JOBS/{name}"
    id: jenkins-job
    <<: *job_default

- project:
    name: "jobs"
    jobs:
      - "builder-job":
          name: JOB_BUILDER
          dir_name: job-builder
          properties:
            - inject:
                keep-system-variables: true
